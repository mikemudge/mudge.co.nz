<html ng-app="{{ angular.app }}">
<head lang="en">
  <base href="{{ angular.base | default('/') }}" />
  <meta charset="UTF-8">
  <meta name="google-signin-client_id"
      content="617413556283-u2glkds0e166eghg3b9l60cu8j3fevcv.apps.googleusercontent.com">
  <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1, minimum-scale=1.0, maximum-scale=1.0">

  <title ng-bind="title">{{ angular.title }}</title>

  <script type="text/javascript" src="/static/js/angular.min.js"></script>
  <script type="text/javascript" src="/static/js/angular-resource.min.js"></script>
  <script type="text/javascript" src="/static/js/angular-route.min.js"></script>
  <script>
    // make client_config available to the angular app through a module called config.
    config = {{ angular.config | tojson }};
    config.google = {
      client_id: '617413556283-u2glkds0e166eghg3b9l60cu8j3fevcv.apps.googleusercontent.com'
    }
    angular.module('config', []).constant('config', config);
  </script>
  {% for style in styles %}
  <link rel="stylesheet" type="text/css" href="{{ style }}" />
  {% endfor %}
</head>
<body>
{% if angular.include %}
  <div ng-include="'{{ angular.include }}'"></div>
{% else %}
  {# Show the view for the current page #}
  <div ng-view autoscroll="true"></div>
{% endif %}

  {% for script in scripts %}
  <script src="{{ script }}" type="text/javascript"></script>
  {% endfor %}
</body>
</html>